<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@color/background_home">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/pic"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_request"
        android:id="@+id/label_request"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/editRequest"

        android:layout_marginTop="10dp"
        android:textColor="@color/color_label"
        android:textAppearance="?android:attr/textAppearance"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editRequest"
        android:layout_below="@+id/label_request"
        android:layout_alignParentLeft="true"

        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"

        android:textAppearance="?android:attr/textAppearance"
        android:hint="@string/hint_request"
        android:singleLine="true"
        android:textColor="@android:color/white" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnSend"
        style="@style/CustomStyleButton"
        android:text="@string/btn_request"
        android:layout_below="@+id/editRequest"
        android:layout_alignLeft="@+id/editRequest"

        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:enabled="true"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_response"
        android:id="@+id/label_response"
        android:layout_below="@+id/btnSend"
        android:layout_alignLeft="@+id/textResponse"

        android:layout_marginTop="20dp"
        android:textColor="@color/color_label"
        android:textAppearance="?android:attr/textAppearance"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/textResponse"
        android:layout_below="@+id/label_response"
        android:layout_alignParentLeft="true"

        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:textAppearance="?android:attr/textAppearance"
        android:textColor="@android:color/white" />

</RelativeLayout>
